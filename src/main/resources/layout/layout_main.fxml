<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.controls.JFXRippler?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import com.jfoenix.transitions.hamburger.HamburgerBackArrowBasicTransition?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.controller.MainController">

    <BorderPane>
        <top>
            <VBox spacing="20">
                <JFXToolbar>
                    <leftItems>
                        <JFXRippler maskType="CIRCLE">
                            <StackPane fx:id="titleBurgerContainer">
                                <JFXHamburger fx:id="titleBurger">
                                    <HamburgerBackArrowBasicTransition/>
                                </JFXHamburger>
                            </StackPane>
                        </JFXRippler>
                        <Label>教材征订与发放系统</Label>
                    </leftItems>
                </JFXToolbar>
            </VBox>
        </top>

        <center>
            <JFXDrawer fx:id="drawer" defaultDrawerSize="250" direction="LEFT">
            </JFXDrawer>
        </center>
    </BorderPane>


</StackPane>
